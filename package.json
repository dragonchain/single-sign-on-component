{
  "name": "@dragonchain-dev/single-sign-on-component",
  "version": "1.0.0",
  "description": "Single sign-on login component for use on any dragonchain url.",
  "main": "./lib/App.js",
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./node_modules ./src/scss -o ./src/scss",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./node_modules ./src/scss -o ./src/scss --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p start-js",
    "build-js": "REACT_APP_STAGE=production react-scripts build",
    "build-js-dev": "REACT_APP_STAGE=development react-scripts build",
    "build": "npm-run-all build-css build-js",
    "build-dev": "npm-run-all build-css build-js-dev",
    "test": "react-scripts test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dragonchain-inc/single-sign-on-component.git"
  },
  "author": "Dragonchain Developers",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dragonchain-inc/single-sign-on-component/issues"
  },
  "homepage": "https://github.com/dragonchain-inc/single-sign-on-component#readme",
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "node-sass-chokidar": "^1.3.4",
    "react-scripts": "^2.1.3"
  },
  "dependencies": {
    "@dragonchain-dev/cognito-wrapper": "^4.0.12",
    "aws-amplify-react": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "reactstrap": "^7.1.0",
    "webpack-cli": "^3.2.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "directories": {
    "lib": "lib"
  }
}
